<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_acti_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to permission" />

    <Button
        android:id="@+id/btn_go_acti_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to gif" />

    <Button
        android:id="@+id/btn_go_acti_statusbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to status bar" />

    <Button
        android:id="@+id/btn_go_acti_fullimage_statusbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to full image status bar" />

    <Button
        android:id="@+id/btn_go_acti_adev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to recyclerview page" />
</androidx.appcompat.widget.LinearLayoutCompat>