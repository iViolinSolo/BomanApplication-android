<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape>
            <corners
                android:topLeftRadius="@dimen/corner_radius_8dp"
                android:topRightRadius="@dimen/corner_radius_8dp"
                android:bottomLeftRadius="@dimen/corner_radius_0dp"
                android:bottomRightRadius="@dimen/corner_radius_0dp" />
            <solid android:color="@color/colorDividerHGray" />  <!-- 边框颜色 -->
        </shape>
    </item>

    <!--    想保留哪一边就设置哪一边边框，列如只有下边框：bottom="0.7dp"，相应的有上top="",left="",right=""    -->
    <item android:bottom="0.5dp">
        <shape>
            <corners
                android:topLeftRadius="@dimen/corner_radius_8dp"
                android:topRightRadius="@dimen/corner_radius_8dp"
                android:bottomLeftRadius="@dimen/corner_radius_0dp"
                android:bottomRightRadius="@dimen/corner_radius_0dp" />

            <solid
                android:color="@color/colorWhite" /><!-- 整个框背景颜色 -->
        </shape>
    </item>

</layer-list>